<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/ui_tabname_entree"
        android:orientation="horizontal"
        android:src="@drawable/lunch" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <RadioButton
            android:text="Beef               $ 12.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entree_beef"
            android:layout_weight="1"
            app:buttonTint="@android:color/white"
            android:textColor="@android:color/white" />

        <RadioButton
            android:text="Chicken         $ 9.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entree_chicken"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            app:buttonTint="@android:color/white" />

        <RadioButton
            android:text="Shrimp           $ 10.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entree_shrimp"
            android:layout_weight="1"
            app:buttonTint="@android:color/white"
            android:textColor="@android:color/white" />

    </RadioGroup>

</RelativeLayout>

