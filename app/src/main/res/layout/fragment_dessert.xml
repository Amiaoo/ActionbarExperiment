<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/ui_tabname_dessert"
        android:orientation="horizontal"
        android:src="@drawable/snack" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/dessert_choice">

        <RadioButton
            android:text="Ice-Cream          $ 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dessert_icecream"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            app:buttonTint="@android:color/white" />

        <RadioButton
            android:text="Cheesecake       $ 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dessert_cheesecake"
            android:layout_weight="1"
            app:buttonTint="@android:color/white"
            android:textColor="@android:color/white" />

        <RadioButton
            android:text="Donut                  $ 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dessert_donut"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            app:buttonTint="@android:color/white" />
    </RadioGroup>

</RelativeLayout>
